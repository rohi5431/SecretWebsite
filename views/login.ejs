<%- include('partials/header') %>
<div class="login-container">
  <h1>Login</h1>
  <form action="/login" method="POST" id="login-form">
    
    <div class="login-input">
      <i class="fa-solid fa-envelope"></i>
      <input type="email" name="username" placeholder="Email" id="login-email" required>
    </div>

    <div class="login-input">
      <i class="fa-solid fa-lock"></i>
      <input type="password" name="password" placeholder="Password" id="login-password" required>
      <i class="fa-solid fa-eye toggle-password login-toggle" id="toggleLoginPassword"></i>
    </div>

    <div class="form-actions">
      <button type="button" onclick="window.location.href='/forget'">Forget Password?</button>
      <button type="submit" id="login-submit">Login</button>
    </div>
  </form>

  <div class="login-para">
    <p>Don't have an account? 
      <button onclick="window.location.href='/register'">Register</button>
    </p>
  </div>
</div>
<%- include('partials/footer') %>